<div class="row mt-5">
  <div class="col-md-8 m-auto">
    <div class="card card-body">
      <h2 class="text-center">Register</h2>
      {{> messages}}
      <form action="/users/register" method="post">
        <div class="form-group">
          <label for="name">Name</label><span class="requiredInput">*</span>
          <input class="form-control" type="text" name="name" id="name" value="{{name}}"
            placeholder="Please enter your name" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label><span class="requiredInput">*</span>
          <input class="form-control" type="email" name="email" id="email" value="{{email}}" placeholder="Your email"
            required>
        </div>
        <div class="form-group">
          <label for="password">Password</label><span class="requiredInput">*</span>
          <input class="form-control" type="password" name="password" id="password" value="{{password}}"
            placeholder="Your password" required>
        </div>
        <div class="form-group">
          <label for="confirmPassword">Confirm Password</label><span class="requiredInput">*</span>
          <input class="form-control" type="password" name="confirmPassword" id="confirmPassword"
            value="{{confirmPassword}}" placeholder="Confirm your password" required>
        </div>

        <button type="submit" class="btn btn-info mt-3 btn-block ">Register</button>
        <a class="mt-2" style="display: block" href="/users/login">Already have an account?</a>
      </form>
    </div>
  </div>
</div>