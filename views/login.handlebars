<div class="row mt-5">
  <div class="col-md-8 m-auto">
    <div class="card card-body">
      <h2 class="text-center">Login</h2>
      {{> messages}}
      <form action="/users/login" method="post">
        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-control" type="email" name="email" id="email" placeholder="Your email">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control" type="password" name="password" id="password" placeholder="Your password">
        </div>

        <button type="submit" class="btn btn-info mt-3 btn-block ">Login!</button>
        <a class="mt-2" style="display: block" href="/users/register">No account?</a>
      </form>
    </div>
  </div>
</div>