<div class="btn-group">
  <form action="/category?_method=PUT" method="post">
    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
      aria-expanded="false">
      類別
    </button>
    <div class="dropdown-menu">
      {{#each categories}}
      <button type="submit" class="dropdown-item" name="categorySelected" value="{{this.name}}">{{this.name}}</button>
      {{/each}}
    </div>
  </form>
</div>

<div class="title_value d-flex align-items-center">
  <p class="lead">總金額：</p>
  <h2 class="ml-3" style="color:brown">{{totalAmount}}</h2>
</div>

<a href="/records/new" class="btn btn-primary my-3 d-flex justify-content-center">Add new record</a>

<ul class="list-group mb-5">
  {{#each records}}
  <li href="#" class="list-group-item list-group-item-action d-flex justify-content-between">
    <span class="col-3 my-auto" style="font-size: 36px">
      {{getCategoryIcon ../CATEGORY ../categories this.categoryId}}
    </span>
    <div class="col-6">
      <h5 class="mt-2">{{this.name}}</h5>
      <p class="mt-3">{{formatDate this.date }}</p>
    </div>

    <div class="col-3">
      <span class="h4 mt-1 d-flex justify-content-end">{{this.amount}} </span>
      <div class="d-flex mt-2 justify-content-end">
        <form action="/records/edit/{{this._id}}" method="get"><button class="btn btn-light btn-sm" type="submit"><i
              class="fas fa-pen fa-xs"></i></form>
        <form onsubmit="return confirm(' 確定要刪除 {{this.name}} {{this.amount}}元紀錄嗎？')"
          action="/records/{{ this._id }}?_method=DELETE" method="post">
          <button class="btn btn-light btn-sm" type="submit"><i class="far fa-trash-alt"></i>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>